<h1>New game</h1>
<% @letters.each do |letter| %>
  <button class='btn btn-primary'><%= letter %></button>
<% end %>
<form action="/score" method="POST" data-turbo="false" class="row mt-5">
  <div class="col-auto">
    <input type="text" name="guess" class="form-control">
  </div>
  <div class="col-auto">
    <input type="submit" value="Check" class="btn btn-primary">
  </div>
  <%= hidden_field_tag 'letters', @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
